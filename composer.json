{
    "name": "linnzh/hyperf-component",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "php",
        "hyperf"
    ],
    "description": "一个简单的 Hyperf 项目常用组件抽象化及配置",
    "autoload": {
        "psr-4": {
            "Linnzh\\HyperfComponent\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HyperfTest\\": "tests"
        }
    },
    "require": {
        "php": ">=8.0",
        "ext-redis": "*",
        "ext-swoole": "^4.8",
        "ext-zip": "*",
        "hyperf/constants": "~2.2.0",
        "hyperf/validation": "~2.2.0",
        "hyperf/paginator": "^2.2",
        "hyperf/model-cache": "^2.2",
        "hyperf/logger": "~2.2.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "mockery/mockery": "^1.0",
        "phpunit/phpunit": ">=7.0",
        "swoole/ide-helper": "^4.5"
    },
    "suggest": {
        "swow/swow": "Required to create swow components."
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "cs-fix": "php-cs-fixer fix $1"
    },
    "extra": {
        "hyperf": {
            "config": "Linnzh\\HyperfComponent\\ConfigProvider"
        }
    },
    "repositories": {
        "packagist": {
            "type": "composer",
            "url": "https://mirrors.aliyun.com/composer/"
        }
    }
}
